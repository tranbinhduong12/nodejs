<head>
	<title>
		<%= user.username %>
	</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="description" content="Sublime project">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="/styles/bootstrap4/bootstrap.min.css">
	<link href="/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
	<link rel="stylesheet" type="text/css" href="/styles/checkout.css">
	<link rel="stylesheet" type="text/css" href="/styles/checkout_responsive.css">
</head>
<style>
	.form-control {
		color: black;
	}
	.modal-body p{
		padding: 0;
		margin: 0;
		color: rgb(58, 57, 57);
	}
	.modal-body p span{
		font-weight: 500;
		color: black;
	}
</style>

<body>
	<div class="super_container container">

		<%- include('../partials/header') %>

			<div style="width: 100%; height: 70px;">

			</div>
			<h1>Order List</h1>
			<h1 class="text-center" style="color: black;">Order List</h1>
			<table class="table" style="color: black;">
				<thead>
					<tr class="text-center">
						<th>ID</th>
						<th>The number of products</th>
						<th>Total price</th>
						<th>Payment methods</th>
						<th>Status</th>
						<th>See details</th>
					</tr>
				</thead>
				<tbody>
					<% if (data.length == 0) { %>
						<tr>
							<td colspan="6" class="text-center">No order</td>
						</tr>
					<% } %>
					<% for (var i=0; i < data.length; i++) { %>
						<tr class="text-center">
							<td>
								<%= data[i].id %>
							</td>
							<td>
								<%= data[i].products.length %> products
							</td>
							<td>
								<%= data[i].totalPrice %>
							</td>
							<td>
								<%= data[i].paymentType %>
							</td>
							<td>
								<%= data[i].status %>
							</td>
							<td><a href="#" onclick="viewOrderDetails(<%= i %>)">Xem chi tiết</a></td>
						</tr>
						<% } %>
				</tbody>
			</table>

			<div class="modal fade" id="orderDetailsModal" tabindex="-1" role="dialog"
				aria-labelledby="orderDetailsModalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="orderDetailsModalLabel" style="color: black;">Chi tiết đơn hàng
								#</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">

						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
						</div>
					</div>
				</div>
			</div>


	</div>
	<script src="/js/jquery-3.2.1.min.js"></script>
	<script src="/styles/bootstrap4/popper.js"></script>
	<script src="/styles/bootstrap4/bootstrap.min.js"></script>
	<script src="/plugins/greensock/TweenMax.min.js"></script>
	<script src="/plugins/greensock/TimelineMax.min.js"></script>
	<script src="/plugins/scrollmagic/ScrollMagic.min.js"></script>
	<script src="/plugins/greensock/animation.gsap.min.js"></script>
	<script src="/plugins/greensock/ScrollToPlugin.min.js"></script>
	<script src="/plugins/easing/easing.js"></script>
	<script src="/plugins/parallax-js-master/parallax.min.js"></script>
	<script src="/js/cart.js"></script>

	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag() { dataLayer.push(arguments); }
		gtag('js', new Date());

		gtag('config', 'UA-23581568-13');
	</script>

	<script>
		var data = <%- JSON.stringify(data) %>;
		function viewOrderDetails(index) {
			console.log(data[index]);
			$('#orderDetailsModalLabel').text(`Chi tiết đơn hàng #${data[index].id}`);
			var productDetails = '';
			for (var i = 0; i < data[index].products.length; i++) {
				productDetails += `
				<tr>
					<td>${data[index].products[i].name}</td>
					<td>$${data[index].products[i].price}</td>
					<td>${data[index].products[i].quantity}</td>
				</tr>
				`;
			}
			var orderDetails = `
			<table class="table" style="color: black">
                    <thead class="text-center">
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        <!-- Đoạn mã lặp để hiển thị danh sách sản phẩm chi tiết -->
                        ${productDetails}
                    </tbody>
                </table>
                <p>Ngày đặt: <span>${data[index].createdAt}</span> </p>
                <p>Trạng thái: <span>${data[index].status}</span> </p>
                <p><u>Thông tin người nhận:</u></p>
                <p>Tên: <span>${data[index].userProfile.name}</span> </p>
                <p>Số điện thoại: <span>${data[index].userProfile.phone}</span> </p>
                <p>Địa chỉ: <span>${data[index].userProfile.address}</span> </p>
				<p>note: <span>${data[index].userProfile.note}</span> </p>
			`;
			$('#orderDetailsModal .modal-body').html(orderDetails);
			$('#orderDetailsModal').modal('show');
		}
	</script>
</body>

</html>